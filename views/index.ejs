<!DOCTYPE html>
<html lang="en">

<head>
    <title>Swappy</title>
    <meta charset="UTF-8">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>
    <div id="header" class="container mt-3">
        <h2 class="text-center">Swappy</h2>
        <h1 class="text-center">Dashboard</h1>
    </div>

    <form method="POST" action="" id="searchbar" class="container mt-3">
        <div class="input-group">
            <input type="search" id="search" name="search" class="form-control" placeholder="Search...">
            <div class="input-group-append">
                <input type="submit" value="Go" class="btn btn-outline-secondary" onclick="fetchProductList(), event.preventDefault();">
            </div>
        </div>
        <div id="filterContainer"></div>
    </form>

    <main class="container mt-5">
        <h2 class="text-center">Produktliste</h2>
        <ul id="productList"></ul>

        <% if (typeof user !=='undefined' && user) { %>
            <div class="text-center mt-3">
                <a href="./product/createProduct" class="btn btn-primary">Neues Produkt hochladen</a>
            </div>
        <% } %>
    </main>

    <footer class="mt-5 text-center">
        <div class="container">
            <p>Sina Han, Johann Macht, Jannis Suchanek, Batuhan-Kaan Piskin, Pia DÃ¼now</p>
        </div>
    </footer>

    <script src="/public/scripts/jquery.min.js" type="text/javascript"></script>
    <script src="/public/scripts/ajax/productList.js" type="text/javascript"></script>
</body>
<script src="/public/scripts/jquery.min.js" type="text/javascript"></script>
<script src="/public/scripts/ajax/apiFrontend.js" type="text/javascript"></script>

</html>
